{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Formatting.Compact"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "journey-service"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "Console" }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/journey-service-log-.json",
                "rollingInterval": "Day",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 14
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/journey-service-error-.json",
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Error",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 30
              }
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Default": "Host=postgres;Database=journeys;Username=nav;Password=nav",
    "RewardsRead": "Host=postgres;Database=rewards;Username=nav;Password=nav",
    "Redis": "redis:6379"
  },
  "Auth": {
    "AuthorityPublic": "http://localhost:8080/realms/navigation",
    "AuthorityInternal": "http://navigation-keycloak:8080/realms/navigation",
    "Audience": "navigation-api",
    "ClientId": "navigation-api",
    "RedirectUri": "http://localhost:5000/api/auth/callback",
    "SpaBaseUrl": "http://localhost:5173"
  },
  "RabbitMq": {
    "Host": "rabbitmq",
    "Username": "guest",
    "Password": "guest"
  },
  "Jaeger": {
    "OtlpEndpoint": "http://jaeger:4317"
  }
}
